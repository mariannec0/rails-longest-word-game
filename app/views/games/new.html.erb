<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <h1>New game</h1>
  <div class="grid">
    <ul>
      <% @letters.each do |letter| %>
        <span class="letter"><%= letter.capitalize %></span>
      <% end %>
    </ul>
  </div>

  <div class="form">
    <p>What is the longest word you can find?</p>
    <form action="/score" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="hidden" name="grid" value="<%= @letters.join(',') %>">
      <input type="text" name="word" placeholder="Word required" required id="input">
      <input type="submit" value="Go!">
    </form>
  </div>
</body>
